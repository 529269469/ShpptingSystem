<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_list_item_main"
    android:layout_width="match_parent"
    android:layout_height="41dp"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/main_list_item_number"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:textColor="@color/textColor"
        android:textSize="16sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/main_list_item_currentRing"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:textColor="@color/textColor"
        android:textSize="16sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <androidx.appcompat.widget.AppCompatImageView
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_weight="1.5"
        android:id="@+id/main_list_item_direction"
        android:layout_width="0dp"
        android:layout_height="16dp" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/main_list_item_useTime"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_weight="4"
        android:textColor="@color/textColor"
        android:textSize="16sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <androidx.appcompat.widget.AppCompatTextView
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_weight="5"
        android:id="@+id/main_list_item_currentTime"
        android:textColor="@color/textColor"
        android:textSize="16sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/main_list_item_replay"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:textColor="@color/textColor"
        android:textSize="16sp"
        android:layout_width="0dp"
        android:layout_height="16dp" />
    </LinearLayout>

    <View
        android:background="#1786EF"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>